<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/login/login.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script language="javascript" src="/js/login/login.js"></script>
    <title>Login</title>
</head>
<body>
    <div class="row">

        <div class="wrap">
            <section>
                
                <!--Bắt Đầu Phần Nội Dung-->
                <div class="login-content">
                    <div class="form">
                        <h2>LOGIN</h2>
                        <form method="POST" action="/login">
                            <div class="input-form login">
                                <input id="username" type="text" name="username" placeholder="Username">
                            </div>
                            <div class="input-form password">
                                <input id="password" type="password" name="password" placeholder="Password">
                                <i class="fa fa-eye-slash " id="btn-eye-hiden" aria-hidden="true" style="color:#000" onclick="btnShow()"></i>
                            </div>
                            <div class="remember">
                                <label><input type="checkbox" name="">Remember me</label>
                            </div>
                            <div class="input-form submit">
                                <input id="submit1" type="submit" onclick="submitLogin()" value="Login">
                            </div>
                        </form>
                        <!-- <h3>Đăng Nhập Bằng Mạng Xã Hội</h3>
                        <ul class="icon-dang-nhap">
                            <li><i class="fa fa-facebook" aria-hidden="true"></i></li>
                            <li><i class="fa fa-google" aria-hidden="true"></i></li>
                            <li><i class="fa fa-twitter" aria-hidden="true"></i></li>
                        </ul> -->
                    </div>
                </div>
                <!--Kết Thúc Phần Nội Dung-->
            </section>
        </div>
    </div>

    <script>
        function btnShow() {
            var textShow = document.getElementById('password');
            var btnShow = document.getElementById('btn-eye-hiden');
            if(textShow.type == "password"){
                textShow.type = "text";
                btnShow.className ='fa fa-eye'
            } else {
                textShow.type = "password";
                btnShow.className ='fa fa-eye-slash'
            }
        }
    </script>
</body>
</html>