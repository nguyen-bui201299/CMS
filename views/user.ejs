<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/dashboard/dashboard.css" rel="stylesheet" type="text/css">
    <link href="/css/dashboard/insights/insights.css" rel="stylesheet" type="text/css">
    <link href="/css/modal/modal.css" rel="stylesheet" type="text/css">
<!-- 
    <link href="/css/control/control.css" rel="stylesheet" type="text/css">
    <link href="/css/control/modal-add-bot.css" rel="stylesheet" type="text/css">
    <link href="/css/control/modal_edit_bot.css" rel="stylesheet" type="text/css"> -->

    <link href="/css/user/user.css" rel="stylesheet" type="text/css">
    <link href="/css/user/modal-save.css" rel="stylesheet" type="text/css">
    <link href="/css/dashboard/insights/insights.css" rel="stylesheet" type="text/css"> 
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    
    <link rel="stylesheet" href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <title>User</title>
</head>
<body>
    <div class="container">
        <%- include ('sidebar.ejs') %>
        <!-- Day la doan  a code-->   
        <main>
            <%- include ('modal/users/modal-add-user.ejs') %>
            <%- include ('modal/users/modal-save-users.ejs') %>
            <div class="box-edit-user" id="box-edit-user">
                <div class="box-content">
                    <div class="box-header">
                        <label for="" >Edit Permission </label>
                    </div>
                    <div class="box-edit-content">
                        <div class="box-username">
                            <div class="box-user-control">
                                <div class="box-user-controller">
                                    <label>User Name:</label>
                                    <div>
                                        <div>
                                            <select>
                                                <option value="hung">Hung</option>
                                                <option value="nguyen">Nguyen</option>
                                                <option value="son">Son</option>
                                            </select>
                                            <span class="material-symbols-outlined">
                                                expand_more
                                            </span>
                                        </div>
                                        <div class="btn-add-user">
                                            <input type="button" value="Add">
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="list-user-role">
                                <label for="">Hung <span class="material-symbols-outlined">
                                    disabled_by_default
                                    </span></label>
                                <label for="">Nguyn <span class="material-symbols-outlined">
                                    disabled_by_default
                                    </span></label>
                                <label for="">Hoa <span class="material-symbols-outlined">
                                    disabled_by_default
                                    </span></label>
                            </div>
                        </div>
                        <div class="box-selection-role">
                            <div class="role">
                                <label>Role:</label>
                                <div>
                                    <div>
                                        <select>
                                            <option value="admin">Admin</option>
                                            <option value="member">Member</option>
                                        </select>
                                        <span class="material-symbols-outlined">
                                            expand_more
                                        </span>
                                    </div>
                                    <div class="btn-add-role">
                                        <input type="button" value="Add">
                                    </div>
                                </div>
                            </div>
                            <div class="list-user-role">
                                <label for="">Hung <span class="material-symbols-outlined">
                                    disabled_by_default
                                    </span></label>
                                <label for="">Nguyn <span class="material-symbols-outlined">
                                    disabled_by_default
                                    </span></label>
                                <label for="">Hoa <span class="material-symbols-outlined">
                                    disabled_by_default
                                    </span></label>
                                
                            </div>
                        </div>
                    </div>
                    <div class="box-bottom">
                        <input type="button" value="Cancel" class="btn-cancel" onclick="closeBoxedit()">
                        <input type="button" value="Save" class="btn-save" id="btn-save">
                    </div>
                </div>
            </div>
            <div class="content-add-user">
                <div class="header-user">
                    <div class="title-header-user">

                        <div>
                            <p>User</p>
                        </div>
                    </div>
                    <div class="controller-header-user">
                        <div class="box-controller-header-user">
                            <%- include ('top-right/top.ejs') %>
                        </div>
                    </div>
                    
                </div>
                
                <div class="content-user">
                    <div class="controller-content-user">
                        <button value="+ Add User" class="addUser"> + Add User </button>
                        <button value="- Delete User" class="deleteuser"> - Delete User </button>
                    </div>
                    <%- include ('table/table-user.ejs') %>
                    <!-- <%- include ('table/table-control.ejs') %> -->
                    <div class="list-page">
                        <ul>
                            <li><span class="material-symbols-outlined">
                                arrow_back_ios
                                </span></li>
                            <li>1</li>
                            <li>2</li>
                            <li>3</li>
                            <li>4</li>
                            <li>...</li>
                            <li>9</li>
                            <li><span class="material-symbols-outlined">
                                arrow_forward_ios
                                </span></li>
                        </ul>
    
                    </div>
                </div>
            </div>
        </main>
        <!-- ket thuc doan  a code-->
        <script>
            function openBoxedit(){
                document.getElementById('box-edit-user').style.display = 'block'
            }
            function closeBoxedit(){
                document.getElementById('box-edit-user').style.display='none'
            }
        </script>
        <script src="/js/dashboard/dashboard.js" type="text/javascript"></script>
        <!-- <script src="/js/control/control.js" type="text/javascript"></script> -->
    </div>
</body>
</html>